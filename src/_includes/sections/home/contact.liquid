<section id="contact" class="contact content-wrapper">
    <h2 class="vis-hidden">Contact Us</h2>
    <h3 class="h2">Interested? Get In Touch.</h3>
    <form id="contact-form" aria-label="Contact form">
        <p class="form-disclaimer"><span class="asterisk">*</span> denotes a required field</p>
        <input type="hidden" class="hidden" name="access_key" value="{{ site.vars.CONTACT_FORM_ACCESS_KEY }}" />
        <div class="field">
            <label for="contact-name">Name <img src="/assets/icons/exclamation-circle.svg" alt="" class="icon" aria-hidden="true" loading="lazy" /></label>
            <input type="text" id="contact-name" name="name" required placeholder="Muso Gonnosuke" autocomplete="contact name" />
        </div>
        <div class="field">
            <label for="contact-email">Email <img src="/assets/icons/exclamation-circle.svg" alt="" class="icon" aria-hidden="true" loading="lazy" /></label>
            <input type="email" id="contact-email" name="email" required placeholder="gonnosuke@me.com" autocomplete="contact username" />
        </div>
        <fieldset>
            <legend>Area(s) of Interest</legend>
            <label for="contact-interest-jodo">
                <input type="checkbox" id="contact-interest-jodo" name="interest" value="jodo" />
                Shindo Muso Ryu Jodo
            </label>
            <label for="contact-interest-daito-ryu">
                <input type="checkbox" id="contact-interest-daito-ryu" name="interest" value="daito-ryu" />
                Daito Ryu Aikijujutsu
            </label>
        </fieldset>
        <fieldset>
            <legend>Preferred Practice Location(s)</legend>
            <label for="contact-location-portland">
                <input type="checkbox" id="contact-location-portland" name="location" value="portland" />
                Hoshu Dojo Portland
            </label>
            <label for="contact-location-seattle">
                <input type="checkbox" id="contact-location-seattle" name="location" value="seattle" />
                Hoshu Dojo Seattle
            </label>
            <label for="contact-location-vancouver">
                <input type="checkbox" id="contact-location-vancouver" name="location" value="vancouver" />
                Hoshu Dojo Vancouver
            </label>
            <label for="contact-location-other">
                <input type="checkbox" id="contact-location-other" name="location" value="other" />
                Other (please specify below)
            </label>
        </fieldset>
        <div class="field">
            <label for="contact-questions">Questions? Comments?</label>
            <textarea name="questions" id="contact-questions" rows="6" placeholder="Hi! I&apos;m interested in learning more about jodo and have some questions about classes in Portland."></textarea>
        </div>
        <input type="checkbox" class="hidden" name="botcheck" />
        <div class="flex-wrapper">
            <div>
                <div class="h-captcha" data-captcha="true"></div>
            </div>
            <div class="flex-wrapper flex-wrapper--row">
                <div>
                    <div class="form-errors" role="alert" aria-live="assertive" tabindex="-1">
                        {%- comment %} insert errors via JS {% endcomment -%}
                    </div>
                    <div class="form-success" role="alert" aria-live="polite" tabindex="-1">
                        {%- comment %} insert notices via JS {% endcomment -%}
                    </div>
                </div>
                <button class="button button--primary" type="submit">Send</button>
            </div>
        </div>
    </form>
    <article class="contact__mailing-list slide-fade-in">
        <picture>
            <source srcset="/assets/img/mailing-list.webp" />
            <img src="/assets/img/mailing-list.jpg" alt="" loading="lazy" />
        </picture>
        <div class="contact__mailing-list-form">
            <h4>Want to hear about our upcoming events? Sign up for our mailing list!</h4>
            <form aria-label="Mailing list form" action="https://hoshudojo.us9.list-manage.com/subscribe/post?u=932de532d91ec18ef1f144adf&amp;id=f13bddc5a9&amp;f_id=0056d1e3f0" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_self" novalidate="">
                <input class="no-access" name="b_932de532d91ec18ef1f144adf_f13bddc5a9" tabindex="-1" type="text" value="" />
                <div class="field field--required-alt">
                    <label for="mce-EMAIL">Email</label>
                    <input type="email" id="mce-EMAIL" name="EMAIL" required placeholder="gonnosuke@me.com" autocomplete="mailing-list username" />
                </div>
                <div class="field">
                    <label for="mce-FNAME">First Name</label>
                    <input type="text" id="mce-FNAME" name="FNAME" placeholder="Gonnosuke" autocomplete="mailing-list given-name" />
                </div>
                <div class="field">
                    <label for="mce-LNAME">Last Name</label>
                    <input type="text" id="mce-LNAME" name="LNAME" placeholder="Muso" autocomplete="mailing-list family-name" />
                </div>
                <div style="position: absolute; left: -5000px;" aria-hidden="true">
                    /* real people should not fill this in and expect good things - do not remove this or risk form bot signups */
                    <input type="text" name="b_932de532d91ec18ef1f144adf_f13bddc5a9" tabindex="-1" value="">
                </div>
                <div class="flex-wrapper">
                    <div>
                        <div id="mce-error-response" class="form-errors" role="alert" aria-live="assertive" tabindex="-1">
                        {%- comment %} insert errors via JS {% endcomment -%}
                        </div>
                        <div id="mce-success-response" class="form-success" role="alert" aria-live="polite" tabindex="-1">
                        {%- comment %} insert notices via JS {% endcomment -%}
                        </div>
                    </div>
                    <button id="mc-embedded-subscribe" type="submit">Subscribe</button>
                </div>
            </form>
        </div>
    </article>
</section>